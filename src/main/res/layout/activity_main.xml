<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gfd.city.MainActivity">

   <EditText
       android:id="@+id/ed_city"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/ed_bg"
       android:padding="10dp"
       android:maxLines="1"
       android:hint="输入城市的名字或者拼音"
       android:drawableLeft="@drawable/img_search"
       android:layout_margin="4dp"/>


   <android.support.v7.widget.RecyclerView
       android:id="@+id/recy_city"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ed_city"
       android:layout_marginTop="5dp"/>

   <android.support.v7.widget.RecyclerView
       android:id="@+id/recy_search"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:visibility="gone"
       android:layout_marginTop="5dp"
       android:layout_below="@+id/ed_city"/>

   <TextView
       android:id="@+id/tv_taost"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="50sp"
       android:text="H"
       android:layout_centerInParent="true"
       android:padding="20dp"
       android:visibility="gone"
       android:background="@drawable/tv_bg"/>

   <com.gfd.city.view.LetterView
       android:id="@+id/letter_view"
       android:layout_width="40dp"
       android:layout_height="match_parent"
       android:layout_alignParentRight="true"/>


</RelativeLayout>
